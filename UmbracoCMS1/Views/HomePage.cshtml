@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var pageSections = Model.Value<IEnumerable<BlockListItem>>("pageSections")
                      ?? Enumerable.Empty<BlockListItem>();
}

@{
    Layout = "_Layout";

    var heroTitle = Model.Value<string>("heroTitle") ?? "";
    var heroText = Model.Value<string>("heroText") ?? "";
    var heroImage = Model.Value<IPublishedContent>("heroBgImage");
    var heroImageUrl = heroImage?.Url() ?? "";
    var heroLink = Model.Value<Link>("heroLink");
}

<section class="hero" style="background-image:url('@heroImageUrl');">
    <div class="hero-overlay">
        <div class="container hero-inner">
            <div class="hero-left">
                <h1>@heroTitle</h1>

                <div class="hero-lead">
                    @Html.Raw(heroText)
                </div>

                @if (heroLink != null && !string.IsNullOrEmpty(heroLink.Url))
                {
                    <a class="hero-btn" href="@heroLink.Url">
                        @(string.IsNullOrWhiteSpace(heroLink.Name) ? "Contact us" : heroLink.Name)
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<section class="about-experience">
    <div class="container about-inner">
        <div class="about-left">
            <span class="eyebrow">ABOUT US</span>
            <h2>We have 40 years experience</h2>

            <p class="quote">
                “We have over 25 years of experience providing expert financial advice
                to both businesses and individuals.”
            </p>

            <p>
                Donec imperdiet nibh vulputate velit convallis, ac aliquet nunc rutrum.
                Donec pulvinar ex a egestas blandit. Sed in nisl volutpat, luctus nibh sed,
                tempus lorem.
            </p>

            <div class="signature">
                <div class="sig-line">Tina Fox – CEO &amp; Founder</div>
            </div>
        </div>

        <div class="about-right">
            <div class="callback-card">
                <div class="callback-header">Request a call back</div>
                <div class="callback-body">
                    <p class="callback-text">
                        Dolor sit represent a vulputate sed ex auis aliquam dolor ac
                        aliquam varius natoque penatibus vestibulum.
                    </p>

                    <form>
                        <input type="text" placeholder="Your name" />
                        <input type="email" placeholder="Email address" />
                        <input type="text" placeholder="Phone" />
                        <select>
                            <option>Financial consulting</option>
                            <option>Risk management</option>
                            <option>Tax &amp; audit</option>
                        </select>
                        <button type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@* SERVICES GRID SECTION *@
@foreach (var block in pageSections)
{
    if (block.Content.ContentType.Alias == "servicesGridSection")
    {
        var sectionTitle = block.Content.Value<string>("sectionTitle") ?? "";
        var services = block.Content.Value<IEnumerable<BlockListItem>>("services") ?? Enumerable.Empty<BlockListItem>();

        <section class="services-section">
            <div class="container">
                <p class="services-eyebrow">OUR SERVICES</p>
                <h2 class="services-title">@sectionTitle</h2>

                <div class="services-grid">
                    @foreach (var service in services)
                    {
                        var title = service.Content.Value<string>("serviceTitle") ?? "";
                        var desc = service.Content.Value<string>("serviceDescription") ?? "";
                        var image = service.Content.Value<IPublishedContent>("serviceImage");

                        <article class="service-card">
                            <h3 class="service-heading">@title</h3>
                            @if (image != null)
                            {
                                <img class="service-image" src="@image.Url()" alt="@title" />
                            }
                            <p class="service-desc">@desc</p>
                        </article>
                    }
                </div>
            </div>
        </section>
    }
}

@* TRUSTED CLIENTS SECTION *@
@foreach (var block in pageSections)
{
    if (block.Content.ContentType.Alias == "trustedClientsSection")
    {
        var eyebrow = block.Content.Value<string>("eyebrow") ?? "";
        var highlight = block.Content.Value<string>("highlightNumber") ?? "";
        var body = block.Content.Value<string>("bodyText") ?? "";
        var btn = block.Content.Value<Link>("buttonLink");
        var bg = block.Content.Value<IPublishedContent>("bgImage");
        var people = block.Content.Value<IPublishedContent>("peopleImage");

        var bgUrl = bg?.Url();
        var peopleUrl = people?.Url();

        <section class="trusted" style="@(bgUrl != null ? $"background-image:url('{bgUrl}');" : "")">
            <div class="container trusted-inner">
                <p class="trusted-eyebrow">@eyebrow</p>
                <h2 class="trusted-title"><span class="trusted-strong">@highlight</span></h2>

                @if (!string.IsNullOrWhiteSpace(body))
                {
                    <p class="trusted-body">@body</p>
                }

                @if (btn != null && !string.IsNullOrEmpty(btn.Url))
                {
                    <a class="trusted-btn" href="@btn.Url" target="@(btn.Target ?? "")">
                        @(!string.IsNullOrWhiteSpace(btn.Name) ? btn.Name : "Read our story")
                    </a>
                }

                @if (!string.IsNullOrEmpty(peopleUrl))
                {
                    <div class="trusted-people">
                        <img src="@peopleUrl" alt="Our clients" />
                    </div>
                }
            </div>
        </section>
    }
}

@* SUCCESS STORY SECTION *@
@foreach (var block in pageSections)
{
    if (block.Content.ContentType.Alias == "successStorySection")
    {
        var eyebrow = block.Content.Value<string>("eyebrow") ?? "";
        var title = block.Content.Value<string>("title") ?? "";
        var bg = block.Content.Value<IPublishedContent>("bgPattern");
        var overlay = block.Content.Value<IPublishedContent>("overlayImage");
        var bgUrl = bg?.Url();
        var overlayUrl = overlay?.Url();
        var stats = block.Content.Value<IEnumerable<BlockListItem>>("stats") ?? Enumerable.Empty<BlockListItem>();

        <section class="success-section" style="@(bgUrl != null ? $"background-image:url('{bgUrl}');" : "")">
            <div class="container success-inner">
                @if (!string.IsNullOrWhiteSpace(eyebrow))
                {
                    <p class="success-eyebrow">@eyebrow</p>
                }
                @if (!string.IsNullOrWhiteSpace(title))
                {
                    <h2 class="success-title">@title</h2>
                }

                <div class="success-stats">
                    @foreach (var s in stats)
                    {
                        var num = s.Content.Value<string>("statNumber") ?? "";
                        var cap = s.Content.Value<string>("statCaption") ?? "";
                        <div class="stat">
                            <div class="stat-number">@num</div>
                            <div class="stat-caption">@cap</div>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(overlayUrl))
            {
                <div class="success-overlay-image">
                    <img src="@overlayUrl" alt="Success story image" />
                </div>
            }
        </section>
    }
}

