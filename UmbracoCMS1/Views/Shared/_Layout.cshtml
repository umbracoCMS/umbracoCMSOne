@using Umbraco.Cms.Core.Models.PublishedContent
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var root = Model?.Root();
    var menuItems = root?.Children?.Where(x => x.IsVisible()) ?? Enumerable.Empty<IPublishedContent>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/service.css" />
    <meta charset="utf-8" />
    <title>@Model?.Name</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            box-sizing: border-box;
        }

        /* TOP BAR */
        .topbar {
            background-color: #4f5f5b;
            color: #fff;
            font-size: 12px;
        }

        .topbar-inner {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 32px;
        }

        .topbar-left span + span {
            margin-left: 20px;
        }

        .topbar-right span {
            margin-left: 15px;
            cursor: pointer;
        }

        
        .site-header {
            background-color: #ffffff;
            border-bottom: 1px solid #e2e2e2;
        }

        .site-header-inner {
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: 2px solid #4b6253;
        }

        .logo-text {
            font-weight: 700;
            font-size: 22px;
        }

        .main-nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 30px;
            font-size: 15px;
        }

        .main-nav a {
            text-decoration: none;
            color: #555;
        }

        .main-nav li.active a {
            color: #4b6253;
            font-weight: 600;
        }

        .header-icons {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 18px;
        }

       
        main {
            background-color: #f5f5f5;
        }

        footer {
            margin-top: 80px;
            padding: 40px 0;
            background: #222;
            color: #ccc;
            font-size: 13px;
        }
    </style>
</head>
<body>
    <div class="topbar">
        <div class="container topbar-inner">
            <div class="topbar-left">
                <span>example@email.com</span>
                <span>01 234 567 89</span>
            </div>
            <div class="topbar-right">
                <span>in</span>
                <span>fb</span>
                <span>tw</span>
            </div>
        </div>
    </div>

    <header class="site-header">
        <div class="container site-header-inner">
            <div class="logo">
                <div class="logo-circle"></div>
                <div class="logo-text">Onatrix</div>
            </div>

            <nav class="main-nav">
                <ul>
                    @foreach (var item in menuItems)
                    {
                        <li class="@(item.Id == Model.Id ? "active" : "")">
                            <a href="@item.Url()">@item.Name</a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="header-icons">
                <span>🔍</span>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container footer-inner">
            <p>© Onatrix. All Rights Reserved. Credits to Themesflat</p>
        </div>
    </footer>

</body>
</html>
