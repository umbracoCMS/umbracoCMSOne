{
    "$schema": "appsettings-schema.json",

    "Serilog": {
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console"
                        }
                    ]
                }
            }
        ]
    },

    "Umbraco": {
        "CMS": {
            "Global": {
                "UseHttps": false
            },
            "Content": {
                "MacroErrors": "Throw"
            },
            "Runtime": {
                "Mode": "Development"
            },
            "ModelsBuilder": {
                "ModelsMode": "SourceCodeAuto"
            },
            "Hosting": {
                "Debug": true
            }
        }
    },

    "ConnectionStrings": {
        "umbracoDbDSN": "Server=(localdb)\\MSSQLLocalDB;Database=UmbracoCMS1;Integrated Security=true;TrustServerCertificate=true",
        "umbracoDbDSN_ProviderName": "Microsoft.Data.SqlClient"
    }
}
